<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentKedua">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f8fc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TITLE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah Pesanan"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:textColor="#4a3837"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light" />

            <!-- INPUT PELANGGAN -->
            <EditText
                android:id="@+id/edtPelanggan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Pelanggan"
                android:layout_marginTop="10dp" />

            <!-- INPUT BERAT -->
            <EditText
                android:id="@+id/edtBerat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Berat Cucian (kg)"
                android:layout_marginTop="10dp" />

            <!-- TOGGLE STATUS BAYAR -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Bayar"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="14dp" />

            <ToggleButton
                android:id="@+id/toggleStatusBayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Belum Bayar"
                android:textOn="Sudah Bayar"
                android:textColor="@color/white"
                android:background="#C88277" />

            <!-- CHECKBOX -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilihan Layanan"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="14dp" />

            <CheckBox
                android:id="@+id/cuciSetrika"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuci Setrika" />

            <CheckBox
                android:id="@+id/cuciSaja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuci Saja" />

            <CheckBox
                android:id="@+id/setrikaSaja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setrika Saja" />

            <!-- SWITCH -->
            <Switch
                android:id="@+id/switchAntarJemput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Layanan Antar Jemput"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="14dp" />

            <!-- RADIO GROUP -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Layanan"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="14dp" />

            <RadioGroup
                android:id="@+id/radioLayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioReguler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reguler (2â€“3 Hari)" />

                <RadioButton
                    android:id="@+id/radioKilat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kilat (24 Jam)" />

                <RadioButton
                    android:id="@+id/radioInstant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instant (6 Jam)" />
            </RadioGroup>

            <!-- TIME PICKER -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waktu Pengambilan"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="14dp" />

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            />

            <!-- DATE PICKER -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Pengambilan"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="14dp" />

            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- BUTTON SUBMIT -->
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:background="#C88277" />

            <!-- OUTPUT -->
            <TextView
                android:id="@+id/tvOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="10dp" />

        </LinearLayout>

    </ScrollView>


</FrameLayout>